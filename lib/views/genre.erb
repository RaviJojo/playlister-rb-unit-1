<html>
<head>
    <title>This is the page for <%= genre.name %></title>
</head>

<body>
    <h1><%= genre.name%>!!</h1>

    <h3>Artists of this genre</h3>
    <ul>
        <% genre.artists.each do |artist| %>
        <li><%= artist.name%></li>
    </ul>

    <h3>Songs of this genre</h3>
    <ul>
        <% genre.songs.each do |song| %>
        <li><%= song.name %></li>
    </ul>

</body>
</html>

